<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  	<param-name>usuario</param-name>
  	<param-value>usuario</param-value>
  </context-param>
  
  <context-param>
  	<param-name>password</param-name>
  	<param-value>usuario</param-value>
  </context-param>
  
  <context-param>
  	<param-name>database</param-name>
  	<param-value>jdbc:mysql://localhost:3306/bdrecupera</param-value>
  </context-param>
  
  <context-param>
  	<param-name>driver</param-name>
  	<param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <servlet>
  	<servlet-name>BorrarVideojuegos</servlet-name>
  	<display-name>BorrarVideojuegos</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.BorrarVideojuego</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EditarVideojuego</servlet-name>
  	<display-name>EditarVideojuego</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.EditarVideojuego</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BorrarVideojuegos</servlet-name>
  	<url-pattern>/BorrarVideojuegos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EditarVideojuego</servlet-name>
  	<url-pattern>/EditarVideojuego</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>